@page
@model WEB_053501_Sauchuk.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<hr class="mt-3">
<p class="display-4">Администрирование</p>
<hr class="mt-3">
<button class="btn btn-outline mb-3 mt-3">
    <a asp-page="Create">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</button>
<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Category)
            </th>
            <th></th>
            <th></th>
        </tr>
    <tbody>
    @foreach (var item in Model.Food) {
        <tr>
            <td>
                <img src="@Url.Action("GetImage", "Product", new {imageId = item.ImageId})" width="50">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image.Id)
            </td>
            <td>
                <div style="display: flex; flex-direction: row; align-content: center">
                    <button class="btn btn-outline-success">
                    <a asp-page="./Edit" asp-route-id="@item.Id">
                        <span class="fas fa-edit"></span>
                    </a>
                    </button>
                    <button class="btn btn-outline-danger">
                        <a asp-page="./Delete" asp-route-id="@item.Id">
                            <span class="fas fa-trash-alt"></span>
                        </a>
                    </button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
